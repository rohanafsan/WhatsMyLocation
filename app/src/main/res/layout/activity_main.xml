<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.notro.whatsmylocation.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hiketrail"
        android:layout_centerVertical="true"
        android:id="@+id/imageView"
        android:scaleType="fitXY" />

    <TextView
        android:text="Latitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:id="@+id/latTextView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:textSize="18sp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Longitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/lonTextView"
        android:textSize="18sp"
        android:layout_below="@+id/latTextView"
        android:layout_alignStart="@+id/latTextView"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Accuracy: 12.204"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/accTextView"
        android:textSize="18sp"
        android:layout_below="@+id/lonTextView"
        android:layout_alignStart="@+id/latTextView"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Altitude: 12.204"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/altTextView"
        android:textSize="18sp"
        android:layout_below="@+id/accTextView"
        android:layout_alignStart="@+id/latTextView"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/addTextView"
        android:textSize="18sp"
        android:layout_below="@+id/altTextView"
        android:layout_alignStart="@+id/latTextView"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="What's My Location?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView"
        android:textSize="22sp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addTextView" />

</RelativeLayout>
